#!/bin/bash

export MYIPPRIVATE=$(ip addr show eth0 | grep -o '[0-9]\{1,3\}\.[0-9]\{1,3\}\.[0-9]\{1,3\}\.[0-9]\{1,3\}')
HAVEPUBLIC=$(ip link show | grep eth1)
if [[ $HAVEPUBLIC && ${HAVEPUBLIC-x} ]]
    then
    export MYIPPUBLIC=$(ip addr show eth1 | grep -o '[0-9]\{1,3\}\.[0-9]\{1,3\}\.[0-9]\{1,3\}\.[0-9]\{1,3\}')
else
    export MYIPPUBLIC=$MYIPPRIVATE
fi

installed ()
{
    echo
    echo '#'
    echo '# Mongo is installed and configured'
}

echo
echo '#'
echo '# Testing to see if Mongo is running yet'
echo '#'

MONGORESPONSIVE=0
while [ $MONGORESPONSIVE != 1 ]; do
    echo -n '.'

    # test the default u/p
    mongo --eval "db.serverStatus().ok" &> /dev/null
    if [ $? -eq 0 ]; then
        let MONGORESPONSIVE=1
    else
        sleep .7
    fi
done
sleep 1

echo
echo '#'
echo '# Checking Consul availability'
echo '#'

curl -fs --retry 7 --retry-delay 3 http://consul:8500/v1/agent/services &> /dev/null
if [ $? -ne 0 ]
then
    echo '#'
    echo '# Consul is required, but unreachable'
    echo '#'
    exit
else
    echo '# Consul instance found and responsive'
    echo '#'
fi

MONGORESPONSIVE=0
while [ $MONGORESPONSIVE != 1 ]; do
    echo -n '.'

    # test the default u/p
    mongo --eval "db.serverStatus().ok" &> /dev/null
    if [ $? -eq 0 ]; then
        let MONGORESPONSIVE=1
    else
        sleep .7
    fi
done
sleep 1

echo
echo '#'
echo '# Registering service instance'
echo '#'

curl -f --retry 7 --retry-delay 3 http://consul:8500/v1/agent/service/register -d "$(printf '{"ID":"mongo-%s","Name":"mongo","Address":"%s"}' $MYIPPRIVATE $MYIPPRIVATE)"

installed
